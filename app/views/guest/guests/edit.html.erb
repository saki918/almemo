<%= render "layouts/error_messages", error: @guest %>
<h1>プロフィール編集ページ</h1><br>
<%= form_for(@guest) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, autofocus: true %><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.submit "プロフィールの更新", class: "btn btn-success" %>
<% end %><br>
<%= link_to "パスワードを変更する", edit_guest_registration_path, class:"btn btn-primary" %>