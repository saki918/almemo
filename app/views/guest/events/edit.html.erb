<h1>Guest::Events#edit</h1>
<p>Find me in app/views/guest/events/edit.html.erb</p>

<%= render "layouts/error_messages", error: @event %>
<%#= render "layouts/error_messages", error: genres %>
<%= form_for (@event) do |f| %>
  <%= f.label :"ジャンル" %><br>
  <% @genres.each do |genre| %>
  <%= f.radio_button :genre_id, genre.id %>
  <%= image_tag genre.icon_id.to_s, size:5*5 %>
  <% end %><br>
  <%= f.fields_for :event_members do |a| %>
    <%= a.label :"メンバー" %>
    <%= a.collection_select :member_id,current_guest.members, :id, :name, {include_hidden: false},input_html: {multiple: "multiple"}, id: 'select',multiple: "multiple" %>
  <% end %><br>

  <%= f.label :"タイトル" %>
  <%= f.text_field :title %><br>
  <%= f.label :"開始時間" %>
  <%= f.datetime_select :start_time %><br>
  <%= f.label :"終了時間" %>
  <%= f.datetime_select :finish_time %><br>
  <%= f.label :"コメント" %>
  <%= f.text_area :comment %><br>
  <%= f.fields_for :images do |b| %>
    <%= b.label :"画像" %>
    <%= b.file_field :refile_id, {multiple: true} %>
  <% end %>
  <%= f.submit "イベント作成", class: "btn btn-primary" %>
<% end %>

  <%= form_tag({ controller: :images, action: :destroy_all }, method: :delete) do %>
    <% @images.each do |image| %>
    <div>
    <%= check_box_tag :image, image.id %>
    <%= image_tag image.refile_id.to_s, size:17*17 %>
    <% end %>
    </div>
    <%= submit_tag "削除", class: "btn btn-danger","data-confirm" => "選択した画像を削除しますか？" %>
  <% end %>




