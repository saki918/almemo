<!DOCTYPE html>
<html>

<head>

    <title>Almemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="shortcut icon" href="<%=asset_path "favicon.ico" %>">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <% if current_admin %>
            <%= render "layouts/admin" %>
            <% else current_guest %>
            <%= render "layouts/guest" %>
            <% end %>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <% if current_admin %>
            <%= render "layouts/admin" %>
            <% else current_guest %>
            <%= render "layouts/guest" %>
            <% end %>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <p><%= notice %></p>
                <%= yield %>
            </div>
        </div>
    </div>
</body>

</html>