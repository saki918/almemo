<!DOCTYPE html>
<html>
  <head>
    <title>Almemo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_guest %>
      <%= render "layouts/guest" %>
    <% else current_admin %>
      <%= render "layouts/admin" %>
    <% end %>
    <div class = "container-fluid">
      <div class = "row">
      <%= yield %>
      </div>
    </div>
  </body>
</html>
